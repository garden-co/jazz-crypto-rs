{
  "name": "jazz-crypto-rs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/wrapper.js",
  "browser": "./dist/wrapper.js",
  "types": "./dist/wrapper.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm clean && pnpm build:node && pnpm build:web && pnpm build:wrapper",
